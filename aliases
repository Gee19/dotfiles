alias reload_zsh=". ~/.zshrc"
alias edit_zsh="subl ~/.zshrc && subl ~/.plugins.txt && subl ~/.aliases && subl ~/.zshenv"

alias reload_vim=". ~/.vimrc"
alias edit_vim="subl ~/.vimrc"

# iTerm2 jump words (Option-Arrows)
bindkey -e
bindkey "\e\e[C" forward-word
bindkey "\e\e[D" backward-word

bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down

alias gs="git status"
alias gp="git pull"
alias gb="git branch"
alias gc="git commit"
alias gco="git checkout $1"
alias gcob="git checkout -b $1"
alias gd="git diff"
alias gds="git diff --staged"
alias gc-="git checkout -"
alias gsl="git stash list"
alias gsa="git stash apply"

alias gsd="git stash show -p $1"

alias vs="vagrant status"

alias csd="workon sdelements && cd ~/dev/sdelements/sigma"
alias cst="workon sdetools && cd ~/dev/sdetools"
alias csd2="workon sde2 && cd ~/dev/sde2/sigma"

alias nds="node devServer.js"

alias djrs="./manage.py runserver"
alias djm="./manage.py migrate"
alias djc="./manage.py collectstatic --noinput"

alias djsh="./manage.py shell_plus"
alias tst="./manage.py test $1 --settings=test_local_settings --nomigrations"
alias mailserv="python -m smtpd -n -c DebuggingServer localhost:1025"

alias start_celery="celery -A . worker --app=celery_mod -l debug"
alias flush_dns="dscacheutil -flushcache; sudo killall -HUP mDNSResponder"

alias stopdock='docker stop $(docker ps -a -q)'
alias rmdock='docker rm $(docker ps -a -q)'

alias ll="ls -lah"
