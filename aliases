# fixes pip install smart_open[s3] in zsh
alias pip='noglob pip'
alias pip3='noglob pip3'

function gsd() {
    if [ "$1" != "" ]
    then
        git stash show -p stash@{$1}
    else
        git stash show -p stash@{0}
    fi
}

function gcopr() {
    if [ "$1" != "" ]
    then
      git fetch origin "refs/pull/$1/head:pr/$1" && git checkout "pr/$1"
    else
      return
    fi
}

