# Expand Alias: <Esc>:_expand_alias
alias reload_zsh="znap restart"

alias ..="cd .."

alias gs="git status"
alias gp="git pull"
alias gb="git branch"
alias gc="git commit"
alias gca="git commit --amend"
alias ga="git add $1"
alias gr="git pull origin $1 --rebase"
alias gl="git log"
alias glp="git --no-pager log --oneline -n30"
